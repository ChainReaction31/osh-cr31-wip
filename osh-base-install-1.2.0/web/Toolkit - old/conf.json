{
	"tags": {
		"allowUnknownTags" : true
	},
	"plugins": ["plugins/markdown"],
	"templates": {
		"applicationName": "OpenSensorHub Toolkit",
		"disqus": "",
		"googleAnalytics": "",
		"openGraph": {
			"title": "",
			"type": "website",
			"image": "http://docs.opensensorhub.org/img/logo-light.png",
			"site_name": "",
			"url": ""
		},
		"meta": {
			"title": "",
			"description": "",
			"keyword": ""
		},
		"linenums": true,
		"source": {
			"include": [
				"./src/"
			],
			"includePattern": ".+\\.js(doc)?$",
			"excludePattern": "(^|\\/|\\\\)_"
		},
		"opts": {
			"encoding": "utf8",
			"recurse": true,
			"private": false,
			"lenient": true,
			"destination": "./docs",
			"template": "./node_modules/jaguarjs-jsdoc"
		},
		"default": {
			"outputSourceFiles": true
		}
	},
	"markdown": {
		"parser": "gfm",
		"hardwrap": true,
		"tags": ["examples"]
	}
}
